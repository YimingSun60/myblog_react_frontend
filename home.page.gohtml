{{template "base" .}}
{{define "css"}}
    <link href="https://vjs.zencdn.net/8.6.1/video-js.css" rel="stylesheet"/>
{{end}}
{{define "js"}}
    <script src="https://vjs.zencdn.net/8.6.1/video.min.js"></script>
{{end}}

{{define "content"}}
    <main>
        <section id="title" class="background_color">
        <div class="container text-center px-4 pt-5 pb-5">

                <div class="row justify-content-center">
                    <h1 class="display-4">Whimsical Wanderings & Wordplay</h1>
                    <p class="lead">
                        Explorer of Ideas and Weaver of Words!
                    </p>
                </div>

                <div class="row justify-content-center pt-5">
                    <div class="col">
                        <video
                                id="my-video"
                                class="video-js"
                                controls
                                preload="auto"
                                width="640"
                                height="360"
                                data-setup="{}"
                        >
                            <source src="/assets/home_usagi.mp4" type="video/mp4"/>
                            <p class="vjs-no-js">
                                To view this video please enable JavaScript, and consider upgrading to a
                                web browser that
                                <a href="https://videojs.com/html5-video-support/" target="_blank"
                                >supports HTML5 video</a
                                >
                            </p>
                        </video>
                    </div>
                </div>
        </div>
        </section>
        <section id = "about">
            <div class="container text-center px-4 pt-6">
                <div class="row justify-content-center">
                    <div class="col">
                        <h2 class="display-5">About Me</h2>
                        <p class="lead">
                            I am a software engineer with a passion for learning and sharing knowledge.<br>
                            I am a full stack developer with experience in Go, Python, and JavaScript.<br>
                            I am also a Linux enthusiast and a fan of open source software.<br>
                    </div>
                </div>
            </div>
        </section>
    </main>

{{end}}
